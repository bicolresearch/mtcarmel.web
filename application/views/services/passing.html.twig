{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <div class="col-12 col-lg-4 mb-4">
            <div class="list-group" id="list-tab" role="tablist">
                <div class="list-group-item list-group-item-action">
                    <div class="service">
                        <i class="icon-passing icon-96 sienna m-0 p-0"></i>
                    </div>
                    <div class="service-info">
                        <div class="title">Passing</div>
                        <div class="desc text-left">
                            Provide christian services and a peaceful resting place for our late loved ones
                        </div>
                    </div>
                </div>
                <a class="list-group-item list-group-item-action active" id="list-passing-list" data-toggle="list" href="#list-passing" role="tab" aria-controls="passing">Funeral Service</a>
                <a class="list-group-item list-group-item-action " id="list-passing-list" data-toggle="list" href="#list-passing" role="tab" aria-controls="passing">Funeral Chapel</a>
                <a class="list-group-item list-group-item-action " id="list-passing-list" data-toggle="list" href="#list-passing" role="tab" aria-controls="passing">Crypt Lobby - Mass for the Dead</a>
                <a class="list-group-item list-group-item-action " id="list-passing-list" data-toggle="list" href="#list-passing" role="tab" aria-controls="passing">November Mass for the Dead</a>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-passing" role="tabpanel" aria-labelledby="list-passing-list">
                    <div class="card">
                        <div class="card-body px-6">
                            <p class="text-center">
                                Funeral Service for blessing or conducting mass during the funeral.
                            </p>

                            <p class="text-center mb-0">Parishioner may give the officiating priest a donation after the service.</p>
                            <br>
                            <p class="text-center mb-0">Exclusive for funerals conducted inside Our Lady of Mount Carmel premises.</p>
                        </div>
                        <div class="card-footer">
                            <p class="text-center mb-0">
                                <a class="btn btn-lg btn-brown rounded-pill px-5" href="javascript:void(0)" data-toggle="modal" data-target="#acceptanceModal">Accept</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Acceptance modal #}
    <div class="modal fade" id="acceptanceModal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="acceptanceModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="acceptanceModalTitle">Funeral Service</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body p-lg-5">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-lg btn-brown rounded-pill px-5" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}