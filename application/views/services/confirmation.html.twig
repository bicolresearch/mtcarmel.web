{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <div class="col-12 col-lg-4 mb-4">
            <div class="list-group" id="list-tab" role="tablist">
                <div class="list-group-item list-group-item-action">
                    <div class="service">
                        <i class="icon-confirmation icon-96 sienna m-0 p-0"></i>
                    </div>
                    <div class="service-info">
                        <div class="title">Confirmation</div>
                        <div class="desc text-left">
                            Duis accumsan nibh justo, eu eleifend nisi mattis ut. Nullam congue iaculis
                            auctor.
                        </div>
                    </div>
                </div>
                <a class="list-group-item list-group-item-action active" id="list-confirmation-list" data-toggle="list" href="#list-confirmation" role="tab" aria-controls="confirmation">Confirmation</a>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-confirmation" role="tabpanel" aria-labelledby="list-confirmation-list">
                    <div class="card">
                        <div class="card-body px-6">
                            <p class="text-center">
                                Applicant may only have 1 or 2 sponsors during confirmation.
                            </p>

                            <div class="alert alert-light-brown sienna mx-7" role="alert">
                                <div class="alert-message">
                                    <h4 class="alert-heading">Fees:</h4>
                                    <ul>
                                        <li>Application Fee</li>
                                    </ul>
                                    <hr>
                                    <ul style="list-style-type: circle">
                                        <li>500 php</li>
                                    </ul>
                                </div>
                            </div>

                            <p class="text-center mb-0">Upon submission, you may contact Catechetical Ministry office to schedule your catechesis.</p>
                            <br>
                            <p class="text-center mb-0">Call 727-94-32 local 411</p>
                            <p class="text-center mb-0">Tuesday to Saturdays</p>
                            <p class="text-center mb-0">9am-5pm</p>
                            <br>
                            <p class="text-center mb-0">You may settle your bill using your debit card, credit card or cash</p>
                        </div>
                        <div class="card-footer">
                            <p class="text-center mb-0">
                                <a class="btn btn-lg btn-brown rounded-pill px-5" href="javascript:void(0)" data-toggle="modal" data-target="#acceptanceModal">Accept</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Acceptance modal #}
    <div class="modal fade" id="acceptanceModal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="acceptanceModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="acceptanceModalTitle">Confirmation</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body p-lg-5">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-lg btn-brown rounded-pill px-5" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
