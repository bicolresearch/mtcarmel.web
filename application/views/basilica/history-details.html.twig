{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div id="historyd" class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">History</h3>
                </div>
                <div class="card-body">
                    <div id="content">
                        <!-- This is where the historyd content load -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Details</h3>
                </div>
                <div class="card-body">
                    <div id="details">
                        <!-- This is where the historyd details load -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block custom_scripts %}
    <script>
        $(function () {

            let baseURL = location.origin.toLowerCase();
            let apiURL = 'https://api.mountcarmel.ph';

            let app = {
                init: function () {
                    this.historyd();
                },
                // GET: historyd
                historyd: function() {
                    
                    let el = $('#historyd');
                    let data = el.serialize();

                    $.ajax({
                        url: apiURL + '/history_details/id/1',
                        type: 'GET',
                        dataType: 'json',
                        data: data,
                        cache: false,
                        processData: false,
                        success: function (data) {
                            if (data) {
                                el.find('#content').html(data[0].content);
                                el.find('#details').html(
                                    '<dl class="row">' +
                                    '<dt class="col-sm-6 text-right">Date of Establishment</dt>' +
                                    '<dd class="col-sm-6">' + data[0].date_of_establishment + '</dd>' +
                                    '<dt class="col-sm-6 text-right">Feast Day</dt>' +
                                    '<dd class="col-sm-6">' + data[0].feast_day + '</dd>' +
                                    '<dt class="col-sm-6 text-right">Titular</dt>' +
                                    '<dd class="col-sm-6">' + data[0].titular + '</dd>' +
                                    '<dt class="col-sm-6 text-right">Diocese</dt>' +
                                    '<dd class="col-sm-6">' + data[0].diocese + '</dd>' +
                                    '</dl>'
                                );
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('The following error occurred: ' + textStatus, errorThrown);
                        }
                    });
                }
            };

            app.init();
        })
    </script>
{% endblock %}