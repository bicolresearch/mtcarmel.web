{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <!-- Holy Mass -->
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Holy Mass</h3>
                </div>
                <div class="card-body">
                    <h4>Sundays</h4>
                    <ul class="card-text list-unstyled">
                        <li>06:00 AM - 07:00 AM (Filipino)</li>
                        <li>07:15 AM - 08:15 AM</li>
                        <li>08:30 AM - 09:30 AM</li>
                        <li>09:45 AM - 10:45 AM</li>
                        <li>11:00 AM - 12:00 PM</li>
                        <li>12:15 PM - 01:15 PM</li>
                        <li>03:45 PM - 04:45 PM (Filipino)</li>
                        <li>05:00 PM - 06:00 PM</li>
                        <li>06:15 PM - 07:15 PM</li>
                        <li>07:30 PM - 08:30 PM</li>
                    </ul>

                    <h4>Weekdays</h4>
                    <ul class="card-text list-unstyled">
                        <li>06:00 AM - 07:00 AM</li>
                        <li>07:00 AM - 08:00 AM</li>
                        <li>12:15 PM - 01:15 PM (Filipino)</li>
                        <li>06:00 PM - 07:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Confessions -->
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Confessions</h3>
                </div>
                <div class="card-body">
                    <h4>Sundays</h4>
                    <ul class="card-text list-unstyled">
                        <li>02:00 PM - 04:00 PM</li>
                    </ul>

                    <h4>Saturdays</h4>
                    <ul class="card-text list-unstyled">
                        <li>06:30 AM - 07:00 AM</li>
                        <li>05:00 PM - 06:00 PM</li>
                    </ul>

                    <h4>Weekdays</h4>
                    <ul class="card-text list-unstyled">
                        <li>06:30 AM - 07:00 AM</li>
                        <li>06:30 PM - 07:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Blessings -->
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-2">Blessings</h3>
                    <h4 class="card-subtitle">of cars and religious items</h4>
                </div>
                <div class="card-body">
                    <h4>Everyday</h4>
                    <ul class="card-text list-unstyled">
                        <li>09:00 AM - 11:00 AM</li>
                        <li>03:00 PM - 04:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Live Mass -->
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Live Mass</h3>
                </div>
                <div class="card-body">
                    <h4>Sundays</h4>
                    <ul class="card-text list-unstyled">

                        <li>06:00 AM - 07:00 AM  (Filipino)</li>
                        <li>07:00 AM - 08:00 AM</li>
                        <li>06:00 PM - 07:00 PM</li>
                        <li>07:00 PM - 08:00 PM</li>
                    </ul>

                    <h4>Saturdays</h4>
                    <ul class="card-text list-unstyled">
                        <li>06:00 AM - 07:00 AM</li>
                        <li>07:00 AM - 08:00 AM</li>
                        <li>06:00 PM - 07:00 PM</li>
                        <li>07:00 PM - 08:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}