<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Mount Carmel System">
    <meta name="author" content="Bicol Research">
    <title>{% block title %}Mount Carmel{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ base_url('public/assets/css/style.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body data-user-id="{{ user.id }}">
<div class="wrapper">
    {% block sidebar %}
        <nav class="sidebar sidebar-sticky">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="{{ base_url('admin') }}">
                    <div class="logo">
                        <img src="{{ base_url('public/assets/images/brands/mount-carmel-logo.svg') }}" alt="Mount Carmel Logo"/>
                    </div>
                    <div class="logo-text">
                        <div class="title">Mount Carmel</div>
                        <div class="address">Quezon City, Philippines</div>
                    </div>
                </a>
                <ul class="sidebar-nav">
                    <li class="sidebar-item active">
                        <a href="#management" data-toggle="collapse" class="sidebar-link collapsed">
                            <i class="align-middle icon-management icon-18"></i> <span class="align-middle">Management</span>
                        </a>
                        <ul id="management" class="sidebar-dropdown list-unstyled collapse">
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/posts') }}">Posts</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/ads') }}">Advertisements</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/media') }}">Media</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/schedules') }}">Mass Schedules</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/boundaries') }}">Map Boundaries</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/priests') }}">Carmelite Priests</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/pastors') }}">Carmelite Pastors</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/contacts') }}">Contact Details</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/history') }}">History</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="sidebar-nav">
                    <li class="sidebar-item active">
                        <a href="#services" data-toggle="collapse" class="sidebar-link collapsed">
                            <i class="align-middle icon-management icon-18"></i> <span class="align-middle">Services</span>
                        </a>
                        <ul id="services" class="sidebar-dropdown list-unstyled collapse">
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/confraternity') }}">Confraternity</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/prayer_request') }}">Prayer Requests</a></li>
                            <li class="sidebar-item"><a class="sidebar-link" href="{{ base_url('admin/mass_request') }}">Mass Requests</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
    <div class="main">
        {% block navbar %}
            <nav class="navbar navbar-expand navbar-light bg-white">
                <a class="sidebar-toggle d-flex mr-2">
                    <i class="hamburger align-self-center"></i>
                </a>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle mr-0 pr-0 profile" href="javascript:void(0)" data-toggle="dropdown">
                                <!-- This is where the avatar load -->
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="{{ base_url('auth/logout') }}" target="_self">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        <main class="content">
            <div class="container-fluid p-0">
                {% block contents %}
                    {# This is where the partial page load #}
                {% endblock %}
            </div>
        </main>
    </div>
</div>

{% block createModal %}
    <div class="modal fade" id="create" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="createModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="createModalTitle">Add New</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                {% block createModalForm %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block updateModal %}
    <div class="modal fade" id="update" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="updateModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="updateModalTitle">Update</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                {% block updateModalForm %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block deleteModal %}
    <div class="modal fade" id="delete" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="deleteModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="deleteModalTitle">Delete</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <form id="delete-form">
                    <input type="hidden" name="id">
                    <div id="ajax-preloader"></div>
                    <div class="modal-body p-5">
                        <p class="text-center m-0">
                            <!-- This is where the delete confirmation message load -->
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-lg btn-danger rounded-pill px-5 btn-change-state">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block notif %}
    <div class="modal fade" id="notif" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="notifModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="notifModalTitle">Notification</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div id="ajax-preloader"></div>
                <div class="modal-body p-5">
                    <p class="text-center m-0">
                        <!-- This is where the notif message load --> 
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block gallery %}
    <div class="modal fade" id="gallery" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="galleryModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="galleryModalTitle">Media Gallery</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div id="ajax-preloader"></div>
                <div class="modal-body p-5">
                    <table id="datatables__modal" class="table" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Size</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ base_url('public/assets/js/app.js') }}"></script>
    <script src="{{ base_url('public/assets/js/pace.min.js') }}"></script>
    <script src="{{ base_url('public/assets/js/utilities.js') }}"></script>
    <script>
        $(function () {

            let baseURL = location.origin.toLowerCase() + '/mountcarmel.web';
            let apiURL = location.origin.toLowerCase() + '/mountcarmel.api';

            let app = {
                init: function() {
                    this.avatar();
                    this.gallery();
                    this.createModal();
                    this.updateModal();
                    this.galleryModal();
                },
                avatar: function() {

                    let _this = $('body');

                    let id = _this.data('user-id');

                    let jqXHR = $.ajax({
                        url: baseURL + '/admin/profile/id/' + id,
                        type: 'GET',
                        dataType: 'json',
                        data: _this.serialize(),
                        cache: false,
                        processData: false
                    });
                    
                    jqXHR.done(function(data) {
                        if (data) {
                            _this.find('.profile').append('<img class="img-fluid rounded-circle avatar mr-1" src="' + apiURL + '/' + data.avatar + '" alt="' + data.first_name + ' ' + data.last_name + '" />');
                        }
                    });

                    jqXHR.fail(function (jqXHR, textStatus, errorThrown) {
                        console.log('The following error occurred: ' + textStatus, errorThrown);
                    });
                },
                gallery: function() {
                    $('#gallery').on('show.bs.modal', function(){
                        // Check if a table is a DataTable or not
                        if ($.fn.dataTable.isDataTable('#datatables__modal')) { 
                           let table = $('#datatables__modal').DataTable();                   
                        } else {
                            // Initialize datatables
                            table = $('#datatables__modal').DataTable({
                                "processing": true,
                                "serverSide": false,
                                "responsive": true,
                                "select": {
                                    "style": "single"
                                },
                                "ajax": {
                                    "url": baseURL + "/admin/media/media",
                                    "type": "GET"
                                },
                                "columns": [
                                    {
                                        "searchable": false,
                                        "data": "full_path",
                                        "mRender": function(data) {
                                            return '<img class="mx-auto d-block" src="' + apiURL + '/' + data + '" height="32px" alt="' + data + '" />';
                                        }
                                    },
                                    {"data": "name"},
                                    {"data": "file_type"},
                                    {
                                        "data": "file_size",
                                        "mRender": function(data) {
                                            return data + ' ' + 'KB'
                                        }
                                    }
                                ],
                                "lengthMenu": [[10], [10]],
                                "order": [[1, "desc"]],
                                "columnDefs": [
                                    {"orderable": false, "targets": []}
                                ]
                            });

                            // Selected row
                            $('#datatables__modal').on('click', 'tr', function() {
                                // Get the rows id value
                                let data = table.row(this).data();                            
                                // Set media_id to a current opened modal
                                $('.modal').on('show.bs.modal', function(){
                                    $(this).find('input:hidden[name="media_id"]').val(data.id);
                                });
                            });
                        }
                    });
                },
                createModal: function() {
                    $('#create').on('show.bs.modal', function(){
                        $('#gallery').modal('hide');  
                    }).on('hidden.bs.modal', function(){
                        $('body').attr('data-previous-modal', 'create').addClass('modal-open');
                    });
                },
                updateModal: function() {
                    $('#update').on('show.bs.modal', function(){
                        $('#gallery').modal('hide');
                    }).on('hidden.bs.modal', function(){
                        $('body').attr('data-previous-modal', 'update').addClass('modal-open');
                    });
                },
                galleryModal: function() {
                    $('#gallery').on('show.bs.modal', function(){
                        if($('#create').hasClass('.show').toString()) {
                            $('#create').modal('hide');
                        } 
                        if($('#update').hasClass('.show').toString()) {
                            $('#update').modal('hide');
                        } 
                    }).on('hidden.bs.modal', function(e){
                        
                        let modal = $('body').attr('data-previous-modal');

                        switch(modal) {
                            case 'create':
                                $('#create').modal('show');
                                id = $('#create-form').find('input:hidden[name="media_id"]').val();
                                $.get(apiURL + '/media/medium/id/' + id, function( data ) {
                                    $('#create-form').find('#placeholder').replaceWith(
                                        '<div id="placeholder" class="mb-2">' +
                                        '   <img class="img-thumbnail mx-auto d-block" style="max-height: 200px" src="' + apiURL + '/' + data.full_path + '" alt="' + data.name + '" />' +
                                        '</div>');
                                });
                                break;
                            case 'update':
                                $('#update').modal('show');      
                                id = $('#update-form').find('input:hidden[name="media_id"]').val();
                                $.get(apiURL + '/media/medium/id/' + id, function( data ) {
                                    $('#update-form').find('#placeholder').replaceWith(
                                        '<div id="placeholder" class="mb-2">' +
                                        '   <img class="img-thumbnail mx-auto d-block" style="max-height: 200px" src="' + apiURL + '/' + data.full_path + '" alt="' + data.name + '" />' +
                                        '</div>');
                                });
                                break;
                            default:   
                        }

                        // Add class modal-open in body
                        $('body').addClass('modal-open'); 
                    });
                }
            }

            app.init();
        })
    </script>
{% endblock %}

{% block custom_scripts %}
    {# This is where the custom scripts load #}
{% endblock %}
</body>
</html>