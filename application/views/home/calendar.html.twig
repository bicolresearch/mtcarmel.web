{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-2">Calendar</h5>
                    <h4 class="card-subtitle">of Events</h4>
                </div>
                <div class="card-body">
                    <div id="fullcalendar"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block custom_scripts %}
    <script>
        $(function () {
            let methods = {
                calendar: function () {
                    $("#fullcalendar").fullCalendar({
                        header: {
                            left: "prev,next today",
                            center: "title",
                            right: "month,agendaWeek,agendaDay,listMonth"
                        },
                        weekNumbers: true,
                        eventLimit: true,
                        editable: false,
                        events: "https://fullcalendar.io/demo-events.json"
                    });
                }
            };

            methods.calendar();
        });
    </script>
{% endblock %}
