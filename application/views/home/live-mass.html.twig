{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <div id="video-container" class="col-12 col-lg-8">
            <div class="card">
                <div class="card-body">
                    <video controls preload='auto' poster='{{ base_url('public/assets/img/photos/live-mass.jpg') }}' data-setup='{}'>
                        <source src='{{ base_url('public/assets/video/mtcarmel.mp4') }}' type='video/mp4'>
                        <p class='vjs-no-js'>
                            To view this video please enable JavaScript, and consider upgrading to a web browser that
                            <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
                        </p>
                    </video>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Live Mass <i class="indicator indicator-online"></i></h3>
                </div>
                <div class="card-body">
                    <h4>Sundays</h4>
                    <ul class="card-text list-unstyled">
                        <li>6:00 AM - 7:00 AM</li>
                        <li>7:00 AM - 8:00 AM</li>
                        <li>6:00 PM - 7:00 PM</li>
                        <li>7:00 PM - 8:00 PM</li>
                    </ul>
                    <h4>Saturdays</h4>
                    <ul class="card-text list-unstyled">
                        <li>6:00 AM - 7:00 AM</li>
                        <li>7:00 AM - 8:00 AM</li>
                        <li>6:00 PM - 7:00 PM</li>
                        <li>7:00 PM - 8:00 PM</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}