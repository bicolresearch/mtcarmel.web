{% extends 'base.html.twig' %}

{% block title %} {{ page_title }} | Mount Carmel {% endblock %}

{% block contents %}
    <div id="transparency" class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-2">{{ page_title }}
                        <a id="refresh" href="javascript:void(0);" title="Refresh"><i class="icon-refresh mt-2 float-right"></i></a>
                    </h3>
                    <h4 class="card-subtitle">{{ page_subtitle }}</h4>
                </div>
                <div class="card-body">
                    <div id="ajax-preloader"></div>
                    <table class="table table-striped table-hover">
                        <tbody>
                            <!-- This is where the donations list load -->
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <p class="text-center mb-0">
                        <!-- Total donations -->
                        <button type="button" class="btn btn-lg btn-brown rounded-pill px-5">₱0.00</button>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_scripts %}
    <script>
        $(function () {
            
            let baseURL = location.origin.toLowerCase() + '/mountcarmel.web';
            let apiURL = location.origin.toLowerCase() + '/mountcarmel.api';
            
            let app = {
                init: function () {
                    this.donations(); // GET: Donations
                    this.reloadList(); // Reload donations list
                    this.digits(); //
                },
                donations: function() {
                    
                    let el = $('#transparency');
                    let data = el.serialize();

                    $.ajax({
                        url: apiURL + '/donations',
                        type: 'GET',
                        dataType: 'json',
                        data: data,
                        cache: false,
                        processData: false,
                        beforeSend: function () {
                            el.find('#ajax-preloader').html(
                                '<div class="loader">' +
                                '  <svg class="circular" viewBox="25 25 50 50">' +
                                '    <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>' +
                                '  </svg>' +
                                '</div>').show();
                        },
                        complete: function () {
                            el.find('#ajax-preloader').html(
                                '<div class="loader">' +
                                '  <svg class="circular" viewBox="25 25 50 50">' +
                                '    <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>' +
                                '  </svg>' +
                                '</div>').hide('fast');
                        },
                        success: function (data) {
                            if (data) {
                                // Total Donations
                                el.find('button[type="button"]').html('₱' + parseInt(data.total_donations.amount).toFixed(2)).digits();
                                
                                // Donations List
                                $.each(data.donations_list, function (key, value) {
                                    el.find('tbody').append(
                                        '<tr>' +
                                        '   <td>' +
                                        '       <img class="rounded-circle mr-2" src="' + apiURL + '/' + value.profile_photo + '" width="32" height="32" alt="' + value.first_name + ' ' + value.last_name + '" />' + value.first_name + ' ' + value.last_name +
                                        '   </td>' +
                                        '   <td>' + '₱' + value.amount + '</td>' +
                                        '   <td>' + moment(value.posted_on, "YYYY-MM-DD h:mm:ss").fromNow() + '</td>' +
                                        '   <td>' + value.donation_type + '</td>' +
                                        '</tr>'
                                    );
                                });
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('The following error occurred: ' + textStatus, errorThrown);
                        }
                    });
                },
                reloadList: function() {
                    // TODO: Implement on click refresh donations list
                    $('#refresh').on('click', function(e){
                        e.preventDefault();
                    });
                },
                digits: function() {
                    $.fn.digits = function(){ 
                        return this.each(function(){ 
                            $(this).text( $(this).text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,") ); 
                        })
                    }
                }
            };

            app.init();
        })
    </script>
{% endblock %}