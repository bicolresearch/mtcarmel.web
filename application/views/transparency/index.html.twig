{% extends 'base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row justify-content-center">
        <div id="transparency" class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-2">Transparency
                        <a id="refresh" href="javascript:void(0);" target="_blank" title="Refresh"><i class="icon-refresh mt-2 float-right"></i></a>
                    </h3>
                    <h4 class="card-subtitle">total help received online for this year</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <!-- Donations list -->
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <p class="text-center mb-0">
                        <!-- Total donations -->
                        <a class="btn btn-lg btn-brown rounded-pill px-5" href="javascript:void(0)" target="_blank">₱0.00</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block custom_scripts %}
    <script>
        $(function () {
            let baseURL = location.origin.toLowerCase();
            let apiURL = 'https://api.mountcarmel.ph';

            // GET: Donations
            let donations = {
                init: function () {
                    this.displayDonations();
                },
                displayDonations: function() {
                    let el = $('#transparency');
                    let data = el.serialize();

                    $.ajax({
                        url: apiURL + '/donations',
                        type: 'GET',
                        dataType: 'json',
                        data: data,
                        cache: false,
                        processData: false,
                        success: function (data) {
                            if (data) {
                                // Total Donations
                                el.find('.btn').html('₱' + data.total_donations.amount);
                                // Donations List
                                $.each(data.donations_list, function (key, value) {
                                    el.find('tbody').append(
                                        '<tr>' +
                                        '   <td>' +
                                        '       <img src="' + apiURL + '/' + value.profile_photo + '" width="32" height="32" class="rounded-circle mr-2" alt="Avatar">' + value.first_name + ' ' + value.last_name +
                                        '   </td>' +
                                        '   <td>' + '₱' + value.amount + '</td>' +
                                        '   <td>' + moment(value.posted_on, "YYYY-MM-DD h:mm:ss").fromNow() + '</td>' +
                                        '   <td>' + value.donation_type + '</td>' +
                                        '</tr>'
                                    );
                                });
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('The following error occurred: ' + textStatus, errorThrown);
                        }
                    });
                }
            };

            // TODO: Implement on click refresh donations list
            $('#refresh').on('click', function(e){});

            donations.init();
        })
    </script>
{% endblock %}