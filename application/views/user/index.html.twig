{% extends 'user/base.html.twig' %}
{% block title %} {{ page_title }} | Mount Carmel {% endblock %}
{% block contents %}
    <div class="row">
        <div id="profile" class="col-12 col-lg-4">
            <div class="card mb-3">
                <div class="card-body text-center">   
                    <!-- This is where the user profile load -->
                </div>
            </div>
        </div>
        <div id="info" class="col-12 col-lg-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h3 class="card-title">Personal Information</h3>
                </div>
                <div class="card-body">   
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="first-name">First Name</label>
                                <input id="first-name" class="form-control" name="first-name" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="last-name">Last Name</label>
                                <input id="last-name" class="form-control" name="last-name" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input id="email" class="form-control" name="email" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="mobile">Mobile</label>
                                <input id="mobile" class="form-control" name="mobile" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-lg btn-brown rounded-pill px-5 btn-change-state">Save</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block custom_scripts %}
    <script>
        $(function () {

            let baseURL = location.origin.toLowerCase() + '/mountcarmel.web';
            let apiURL = location.origin.toLowerCase() + '/mountcarmel.api';

            let app = {
                init: function() {
                    this.info();
                },
                // GET: User info
                info: function() {

                    let el = $('#user');
                    let id = el.data('user-id');
                    let data = el.serialize();

                    $.ajax({
                        url: baseURL + '/user/profile/id/' + id,
                        type: 'GET',
                        dataType: 'json',
                        data: data,
                        cache: false,
                        processData: false,
                        beforeSend: function () {},
                        complete: function () {},
                        success: function (data) {
                            if (data) {
                                // Populate profile
                                el.find('#profile .card-body').append(
                                    '<img class="img-fluid rounded-circle mb-2" src="'+ apiURL +'/'+ data.avatar + '" alt="' + data.first_name + ' ' + data.last_name +'" width="128" height="128" />' +
                                    '<h4 class="card-title mb-0">' + data.first_name + ' ' + data.last_name + '</h4>' +
                                    '<div class="text-muted mb-2">' + data.email + '</div>'
                                );
                                el.find('#info input[name="first-name"]').val(data.first_name);
                                el.find('#info input[name="last-name"]').val(data.last_name);
                                el.find('#info input[name="email"]').val(data.email);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log('The following error occurred: ' + textStatus, errorThrown);
                        }
                    });
                }
            }

            app.init();
        })
    </script>
{% endblock %}